<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="showTrainerInformation"
    tools:ignore="UsingOnClickInXml">

    <TextView
        android:id="@+id/nameOfTrainerInList"
        style="@style/enumerationTextStyle"
        android:layout_toRightOf="@id/iconToTrainerName" />

    <ImageView
        android:id="@+id/iconToTrainerName"
        style="@style/enumerationIconStyle"
        app:srcCompat="@drawable/trainers_icon"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>