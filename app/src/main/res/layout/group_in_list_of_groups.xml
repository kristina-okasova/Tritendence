<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:onClick="showGroupInformation"
    tools:ignore="UsingOnClickInXml">

    <ImageView
        android:id="@+id/iconToGroupName"
        style="@style/enumerationIconStyle"
        android:src="@drawable/groups_icon"
        android:contentDescription="@string/GROUP_DESCRIPTION" />

    <TextView
        android:id="@+id/nameOfGroupInList"
        style="@style/enumerationTextStyle"
        android:layout_toEndOf="@+id/iconToGroupName"
        android:layout_toRightOf="@+id/iconToGroupName" />

</RelativeLayout>